NAME = philo

LIBNAME = philo.a

SRC = libft_functions.c \
	philosophers.c \
	program_parsing.c \
	simulation.c

FLAGS = -Wall -Wextra -Werror

RED = \033[1;31m
GREEN = \033[1;32m
YELLOW = \033[1;33m
BLUE = \033[1;34m
RESET = \033[0m

#################
# USE FLAGS
# LINK HEADERS
#################

OBJECT = $(SRC:.c=.o)

all: credit $(NAME)

$(NAME): $(OBJECT)
	@ar rcs $(LIBNAME) $(OBJECT)
	@gcc $(LIBNAME)  -o $(NAME)
	@echo "\n$(GREEN)████████████████████████████████████████████ Done compiling █████████████████████████████████████████████$(RESET)"

%.o:%.c
	gcc $(FLAGS) -c $<

clean:
	@echo "$(RED)Deleting object files...$(RESET) "
	@/bin/rm -f $(OBJECT)

fclean: clean
	@echo "$(RED)Deleting libraries, and executables...$(RESET) "
	@/bin/rm -f $(LIBNAME)
	@/bin/rm -f $(NAME)

re: fclean all

credit:
	@echo "$(GREEN)"
	@echo "█████████████████████████████████████████"
